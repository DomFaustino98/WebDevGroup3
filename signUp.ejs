  <body>
    <div class='hero'>
      <div class='form-box'>
        <div class='button-box'>
          <div id='btn'></div>
          <button type='button' class='toggle-btn' onclick='signUp()'>Sign Up</button>
        </div>

        <div class='social-icons'>
          <div class="col s12 m6 offset-m3 center-align">
              <a class="oauth-container btn darken-4 white black-text" href="/users/google-oauth/" style="text-transform:none">
                  <div class="left">
                      <img width="15px" style="margin-top:4px; margin-right:2px" alt="Google sign-in"
                          src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
                  </div>
                  sign in with Google
              </a>
          </div>

          <!-- Compiled and minified CSS -->
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">

          <!-- Compiled and minified JavaScript -->
          <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
          <!--<img src='fb.png'><img src='tw.png'><img src='gp.png'>-->
          <!--favicon originally called '1f37f.svg' from icons8-->
        </div>


        <!--ejs for outputting variable-->
        <form id='signUp' class='input-group' method='POST'  action='/profiler/EditProfileProc'>
          <input type='text' class='input-field' required placeholder='first name' id='fname' name='fname' value='<%= User.firstname %>'>
          <input type='text' class='input-field' required placeholder='last name' id='lname' name='lname' value='<%= User.lastname %>'>
          <input type='text' class='input-field' required placeholder='username' id='username' name='name' value='<%= User.name %>'>

          <!--<input type='checkbox' class='check-box'><span>I agree to the terms of services</span> -->
          <button type='submit' class='submit-btn'>Register</button>
        </form>
        </div>
    </div>

